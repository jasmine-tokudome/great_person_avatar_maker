{
  "compilerOptions": {
    // 差分ビルド 有効化したい場合のみ下記2行をセット
    // "incremental": true,
    // "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",

    "target": "ES2022",
    "useDefineForClassFields": true,    // TS4.3以上で有効。古い場合は削除
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "types": ["vite/client"],
    "skipLibCheck": true,

    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "react-jsx",

    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    // "erasableSyntaxOnly": true,     // 削除
    "noFallthroughCasesInSwitch": true
    // "noUncheckedSideEffectImports": true // TS5.4以上なら可。エラーなら削除
  },
  "include": ["src"]
}
